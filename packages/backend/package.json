{
  "name": "@avileo/backend",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "bun run --watch --no-clear-screen src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run src/seed/index.ts"
  },
  "dependencies": {
    "@avileo/shared": "workspace:*",
    "@aws-sdk/client-s3": "^3.988.0",
    "@aws-sdk/s3-request-presigner": "^3.988.0",
    "@elysiajs/cors": "^1.4.0",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.18",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.7.3",
    "@types/bun": "latest"
  }
}
